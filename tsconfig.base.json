{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lizards-inc-fe/fetcher": ["libs/fetcher/src/index.ts"],
      "@lizards-inc-fe/home": ["libs/home/src/index.ts"],
      "@lizards-inc-fe/measurement-history": ["libs/measurement-history/src/index.ts"],
      "@lizards-inc-fe/shared-components": ["libs/shared-components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
